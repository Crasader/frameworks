<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kxyx_shape_bg_corners_main"
                android:paddingBottom="30dp">

    <LinearLayout
        android:id="@+id/lly_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/kxyx_ic_close"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="客服中心"
            android:textColor="#434343"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/img_big_logo"
        android:layout_below="@+id/lly_title"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/kxyx_ic_customer_service_waiting_for_you"/>

    <ImageView
        android:id="@+id/img_girl"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/img_big_logo"
        android:layout_alignRight="@+id/img_big_logo"
        android:layout_below="@+id/img_text"
        android:src="@drawable/kxyx_ic_customer_service_girl_with_frame"/>

    <ImageView
        android:id="@+id/img_big_logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/img_girl"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/kxyx_ic_wechat_qr_code"/>

    <LinearLayout
        android:id="@+id/lly_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/img_big_logo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/kxyx_shape_corners_blue"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/kxyx_ic_customer_service"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="电话："
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_customer_service_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_tencent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lly_phone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kxyx_shape_corners_green"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/kxyx_ic_tencent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:text="QQ："
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_customer_service_tencent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/img_big_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/img_big_logo"
        android:background="@drawable/kxyx_shape_bg_gradient_corners_no_left_bottom"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="关注微信公众号："
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_follow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="拇指吧游戏"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_below="@+id/img_girl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/img_big_logo"
        android:background="@drawable/kxyx_shape_bg_gradient_corners_no_left_top_"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="手机截屏本页二维码，打开微信扫一扫点击右上角图标，选取保存的二维码识别即可关注公众号"
        android:textColor="@android:color/white"/>

</RelativeLayout>