<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_game_recharge"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kxyx_shape_bg_corners_main"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/lly_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/kxyx_ic_close"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="游戏充值"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/lly_title"
        android:layout_marginBottom="13dp"
        android:background="#cccccc"/>

    <RadioGroup
        android:id="@+id/rg_charge_line_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_rmb_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/kxyx_selector_stroke_red_gray"
            android:button="@null"
            android:gravity="center"
            android:padding="13dp"
            android:text="10元"
            android:textColor="@drawable/kxyx_selector_color_red_black"/>

        <RadioButton
            android:id="@+id/rb_rmb_fifty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/kxyx_selector_stroke_red_gray"
            android:button="@null"
            android:gravity="center"
            android:padding="13dp"
            android:text="50元"
            android:textColor="@drawable/kxyx_selector_color_red_black"/>

        <RadioButton
            android:id="@+id/rb_rmb_one_hundred"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/kxyx_selector_stroke_red_gray"
            android:button="@null"
            android:gravity="center"
            android:padding="13dp"
            android:text="100元"
            android:textColor="@drawable/kxyx_selector_color_red_black"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_charge_line_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_charge_line_one"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_rmb_five_hundred"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/kxyx_selector_stroke_red_gray"
            android:button="@null"
            android:gravity="center"
            android:padding="13dp"
            android:text="500元"
            android:textColor="@drawable/kxyx_selector_color_red_black"/>

        <RadioButton
            android:id="@+id/rb_rmb_one_thousand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/kxyx_selector_stroke_red_gray"
            android:button="@null"
            android:gravity="center"
            android:padding="13dp"
            android:text="1000元"
            android:textColor="@drawable/kxyx_selector_color_red_black"/>

        <RadioButton
            android:id="@+id/rb_rmb_another"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/kxyx_selector_stroke_red_gray"
            android:button="@null"
            android:gravity="center"
            android:padding="13dp"
            android:text="其他金额"
            android:textColor="@drawable/kxyx_selector_color_red_black"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tv_recharge_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_charge_line_two"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:text="充值金额( 元 )"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_charge_line_two"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_recharge_amount"
        android:text="￥0.00"
        android:textColor="#ed6a34"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_amount"
        android:layout_alignBottom="@+id/tv_amount"
        android:layout_alignParentRight="true"
        android:paddingRight="45dp"
        android:text="1元 = 1平台币"
        android:textColor="#767676"/>

    <Button
        android:id="@+id/btn_immediate_recharge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_recharge_amount"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/kxyx_shape_bg_gadient_corners"
        android:text="立即充值"
        android:textColor="@android:color/white"/>


</RelativeLayout>
